
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    // By default, deny all reads and writes
    match /{document=**} {
      allow read, write: if false;
    }

    // Athletes collection
    match /athletes/{athleteId} {
      // Only authenticated users can create an athlete profile
      allow create: if isSignedIn();
      // Anyone can read athlete profiles (for rosters, etc.)
      allow read: if true;
      // Only authenticated users can update/delete (future admin/owner roles)
      allow update, delete: if isSignedIn();

      // Subcollections for athlete data
      match /{subcollection}/{docId} {
        // Only authenticated users can create/read/update/delete subcollection documents
        allow read, write: if isSignedIn();
      }
    }
  }
}
