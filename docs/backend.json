
{
  "entities": {
    "User": {
      "title": "User",
      "description": "Represents an administrative or staff user of the system.",
      "type": "object",
      "properties": {
        "name": { "type": "string", "description": "Full name of the user." },
        "email": { "type": "string", "format": "email", "description": "Login email for the user." },
        "role": { "type": "string", "enum": ["GUEST", "ADMIN", "HEAD_COACH", "COACH", "PSYCHOLOGIST", "STAFF"], "description": "Access role of the user." },
        "dept": { "type": "string", "description": "Department or division the user belongs to." },
        "status": { "type": "string", "enum": ["ACTIVE", "SUSPENDED"], "description": "Account status." },
        "avatar": { "type": "string", "format": "uri", "description": "URL to the user's avatar image." },
        "lastActive": { "type": "string", "description": "Timestamp or relative time of last activity."}
      },
      "required": ["name", "email", "role", "status"]
    },
    "Athlete": {
      "title": "Atlet",
      "type": "object",
      "description": "Represents an athlete in the academy.",
      "properties": {
        "atlet_id": { "type": "string", "description": "Unique identifier for the athlete." },
        "nama": { "type": "string", "description": "Full name of the athlete." },
        "tanggal_lahir": { "type": "string", "format": "date", "description": "Date of birth." },
        "jenis_kelamin": { "type": "string", "enum": ["Laki-laki", "Perempuan"], "description": "Gender of the athlete." },
        "kategori_usia": { "type": "string", "description": "Age category." },
        "latar_belakang_sosial": { "type": "string", "description": "Social background information." },
        "status_aktif": { "type": "string", "enum": ["AKTIF", "NON-AKTIF"], "description": "Athlete's status." },
        "tanggal_masuk": { "type": "string", "format": "date", "description": "Registration date." }
      },
      "required": ["nama", "tanggal_lahir", "jenis_kelamin", "kategori_usia", "status_aktif", "tanggal_masuk"]
    },
    "OrangTua": {
        "title": "Orang Tua",
        "type": "object",
        "description": "Represents the parent or guardian of an athlete.",
        "properties": {
            "orang_tua_id": { "type": "string" },
            "nama": { "type": "string" },
            "pekerjaan": { "type": "string" },
            "penghasilan_range": { "type": "string" },
            "kontak": { "type": "string" },
            "atlet_id": { "type": "string" }
        }
    },
    "Program": {
        "title": "Program",
        "type": "object",
        "description": "Represents a training or development program.",
        "properties": {
            "program_id": { "type": "string" },
            "nama_program": { "type": "string" },
            "pilar_program": { "type": "string" },
            "sponsor_target": { "type": "string" },
            "tahun": { "type": "string" },
            "status": { "type": "string" }
        }
    },
    "TrainingProgram": {
        "title": "Training Program",
        "type": "object",
        "description": "Represents a structured training program created by a coach based on periodization principles.",
        "properties": {
            "pbName": { "type": "string", "description": "Name of the Badminton Club/Academy." },
            "ageGroup": { "type": "string", "description": "The target age group for the program (e.g., U13, U15)." },
            "athleteLevel": { "type": "string", "description": "The skill level of the athletes (e.g., Pemula, Pratanding, Prestasi)." },
            "period": { "type": "string", "description": "The time period of the program (e.g., YYYY-MM)." },
            "phase": { "type": "string", "description": "The periodization phase (e.g., General Preparation, Competition)." },
            "coachName": { "type": "string", "description": "Name of the head coach responsible." },
            "mainObjectives": { "type": "array", "items": { "type": "string" }, "description": "Main goals like Teknik, Fisik, Taktik, Mental." },
            "objectiveDetails": { "type": "string", "description": "Detailed breakdown of the main objectives." },
            "weeklyPlan": { "type": "string", "description": "The detailed weekly training plan (microcycle)." }
        }
    },
    "Kegiatan": {
        "title": "Kegiatan",
        "type": "object",
        "description": "Represents a specific activity within a program.",
        "properties": {
            "kegiatan_id": { "type": "string" },
            "program_id": { "type": "string" },
            "tanggal": { "type": "string", "format": "date" },
            "jenis_kegiatan": { "type": "string" },
            "lokasi": { "type": "string" },
            "deskripsi": { "type": "string" }
        }
    },
    "Kehadiran": {
        "title": "Kehadiran",
        "type": "object",
        "description": "Tracks athlete attendance for activities.",
        "properties": {
            "kehadiran_id": { "type": "string" },
            "atlet_id": { "type": "string" },
            "kegiatan_id": { "type": "string" },
            "status_hadir": { "type": "string", "enum": ["HADIR", "IZIN", "SAKIT", "ALPA"] },
            "alasan_tidak_hadir": { "type": "string" }
        }
    },
    "Evaluasi": {
        "title": "Evaluasi",
        "type": "object",
        "description": "Represents an evaluation of an athlete.",
        "properties": {
            "evaluasi_id": { "type": "string" },
            "atlet_id": { "type": "string" },
            "tanggal": { "type": "string", "format": "date" },
            "domain": { "type": "string", "enum": ["fisik", "mental", "teknik", "karakter"] },
            "skor_numerik": { "type": "number" },
            "catatan_pelatih": { "type": "string" }
        }
    },
    "LiterasiKeuangan": {
        "title": "Literasi Keuangan",
        "type": "object",
        "description": "Tracks financial literacy metrics for an athlete.",
        "properties": {
            "literasi_id": { "type": "string" },
            "atlet_id": { "type": "string" },
            "bulan": { "type": "string" },
            "kebiasaan_menabung": { "type": "boolean" },
            "nominal_tabungan": { "type": "number" },
            "pemahaman_keuangan": { "type": "number", "description": "Scale from 1-5" }
        }
    },
    "Lingkungan": {
        "title": "Lingkungan",
        "type": "object",
        "description": "Represents an environmental activity.",
        "properties": {
            "lingkungan_id": { "type": "string" },
            "kegiatan_id": { "type": "string" },
            "jenis_aksi": { "type": "string" },
            "partisipasi_atlet": { "type": "number" },
            "dampak_deskriptif": { "type": "string" }
        }
    },
    "Dokumentasi": {
        "title": "Dokumentasi",
        "type": "object",
        "description": "Represents documentation for an activity.",
        "properties": {
            "dokumentasi_id": { "type": "string" },
            "kegiatan_id": { "type": "string" },
            "tipe": { "type": "string", "enum": ["foto", "video"] },
            "url_file": { "type": "string", "format": "uri" },
            "keterangan": { "type": "string" }
        }
    },
    "Laporan": {
        "title": "Laporan",
        "type": "object",
        "description": "Represents a monthly or yearly report.",
        "properties": {
            "laporan_id": { "type": "string" },
            "periode": { "type": "string" },
            "jenis_laporan": { "type": "string", "enum": ["bulanan", "tahunan"] },
            "ringkasan_dampak": { "type": "string" },
            "file_url": { "type": "string", "format": "uri" }
        }
    }
  },
  "auth": {
    "providers": ["google.com"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": { "$ref": "#/entities/User" },
      "description": "Stores user accounts for the admin system."
    },
    "/athletes/{athleteId}": {
      "schema": { "$ref": "#/entities/Athlete" },
      "description": "Stores individual athlete profiles."
    },
    "/parents/{parentId}": {
      "schema": { "$ref": "#/entities/OrangTua" },
      "description": "Stores parent/guardian information."
    },
    "/programs/{programId}": {
      "schema": { "$ref": "#/entities/Program" },
      "description": "Stores program details."
    },
    "/training-programs/{programId}": {
      "schema": { "$ref": "#/entities/TrainingProgram" },
      "description": "Stores structured training programs."
    },
    "/programs/{programId}/activities/{activityId}": {
      "schema": { "$ref": "#/entities/Kegiatan" },
      "description": "Stores activities for a program."
    },
    "/activities/{activityId}/attendance/{attendanceId}": {
      "schema": { "$ref": "#/entities/Kehadiran" },
      "description": "Stores attendance for an activity."
    },
    "/athletes/{athleteId}/evaluations/{evalId}": {
      "schema": { "$ref": "#/entities/Evaluasi" },
      "description": "Stores periodic evaluations for an athlete."
    },
    "/athletes/{athleteId}/financial_literacy/{logId}": {
      "schema": { "$ref": "#/entities/LiterasiKeuangan" },
      "description": "Stores financial literacy logs for an athlete."
    },
    "/activities/{activityId}/environment/{envId}": {
      "schema": { "$ref": "#/entities/Lingkungan" },
      "description": "Stores environmental impact of an activity."
    },
    "/activities/{activityId}/documentation/{docId}": {
      "schema": { "$ref": "#/entities/Dokumentasi" },
      "description": "Stores documentation for an activity."
    },
    "/reports/{reportId}": {
      "schema": { "$ref": "#/entities/Laporan" },
      "description": "Stores generated reports."
    }
  }
}
